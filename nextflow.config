manifest {
    description = 'Legacy Brentlab RNAseq pipeline'
    nextflowVersion = '>= 20.07.0'
}

executor {
    submitRateLimit = "2 sec"
}

process {
    executor = "slurm"
    memory = 2.GB
    scratch = true
    scratch = "${launchDir}/tmp"
    errorStrategy = "finish"

    withLabel: align_count {
        cpus = 8
        memory = 10.GB
    }

        withLabel: align_count {
        cpus = 1
        memory = 5.GB
    }
}

